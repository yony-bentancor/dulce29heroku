{% extends "masterAdministrador.njk" %}
{% block main %}
  <meta charset="utf-8">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
  <title>ACTUALIZAR PRODUCTO</title>
  <body>

    <div id="navbarAdministrador">
      <div class="row">
        <div class="col-12">
          <input type="checkbox" id="menu-toggle" class="menu-toggle">
          {# 
          <label for="menu-toggle" class="menu-toggle-label">&#9776;</label> #}
          <ul class="menu">
            <li>
              <a href="/session/clientes">CLIENTES</a>
            </li>
            <li>
              <a href="/session/pendientes">PENDIENTES</a>
            </li>
            <li>
              <a href="/session/realizados">REALIZADOS</a>
            </li>
            <li>
              <a href="/session/entregados">ENTREGADOS</a>
            </li>
            <li>
              <a href="/session/cobrados">COBRADOS</a>
            </li>
            <li>
              <a href="/session/productosAdmin">PRODUCTOS</a>
            </li>
          </ul>
        </div>
      </div>
    </div>

    <div id="contenedor-clientes">
      <div id="info-pedidosUpdate">
        <form name="formulario" method="post" action="refreshproducto" enctype="multipart/form-data" class="row">

          <div class="row rowmovilinvisibleUpdate">
            <div class="col-7">
              <label for="producto" class="pedidoPendientesTotalNU">PRODUCTO</label>
            </div>
            <div class="col-5">
              <input type="text" name="name" value="{{ name }}" class="formcontrolUpdate">
            </div>
          </div>

          <div class="row rowmovilinvisibleUpdate">
            <div class="col-7">
              <label for="descripcion" class="pedidoPendientesTotalNU">DESCRIPCION</label>
            </div>
            <div class="col-5">
              <input type="text" name="desc" value="{{ desc }}" class="formcontrolUpdate">
            </div>
          </div>

          <div class="row rowmovilinvisibleUpdate">
            <div class="col-7">
              <label for="image" class="pedidoPendientesTotalNU">IMAGEN</label>
            </div>
            <div class="col-5">
              <input type="file" name="image" value="{{ image }}" class="formcontrolUpdate">
            </div>
          </div>

          <div class="row rowmovilinvisibleUpdate">
            <div class="col-7">
              <label for="precio" class="pedidoPendientesTotalNU">PRECIO VENTA</label>
            </div>
            <div class="col-5">
              <input type="text" name="precioVenta" value="{{ precioVenta }}" class="formcontrolUpdate">
            </div>
          </div>

          <div class="row rowmovilinvisibleUpdate">
            <div class="col-7">
              <label for="costo" class="pedidoPendientesTotalNU">COSTO PRODUCCION</label>
            </div>
            <div class="col-5">
              <input type="text" name="costoProduccion" value="{{ costoProduccion }}" class="formcontrolUpdate">
            </div>
          </div>
          <div class="row rowmovilinvisibleUpdate">
            <div class="col-7">
              <label for="costo" class="pedidoPendientesTotalNU">NUMERO PRODUCTO</label>
            </div>
            <div class="col-5">
              <input type="text" name="numeroProducto" value="{{ numeroProducto }}" class="formcontrolUpdate">
            </div>
          </div>
          <div class="row rowmovilinvisibleUpdate">

            <div class="col-4">
              <input type="submit" class="btnUpdate" value="GUARDAR"/>
            </div>
            <div class="col-2"></div>
            <div class="col-4">
              <a href="/session/clientes" class="alink">
                <input type="submit" class="btnUpdate" value="CANCELAR"/>
              </a>
            </div>
            <div class="col-2"></div>
          </div>
        </form>
      </div>
    </div>

  </body>

{% endblock %}